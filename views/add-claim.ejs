<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-claim-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" name="ssn" id="ssn" class="form-control" placeholder="SSN" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="first_name" id="first-name" placeholder="First Name" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="middle_init" id="middle-init" placeholder="M.I." >
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="last_name" id="last-name" placeholder="Last Name" required>
                </div>
                <div class="form-group col-md-4">
                <label for="gender">Gender</label><br>
                    Male<input type="radio" class="form-control" name="gender" id="gender" value="M"><br>
                    Female<input type="radio" class="form-control" name="gender" id="gender" value="F">
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="username" id="username" placeholder="Username" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="number" class="form-control" maxlength="11" name="number" id="number" placeholder="Phone #" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add a Claim</button>
        </form>
    </div>
</div>
</body>
</html>