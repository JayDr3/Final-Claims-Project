<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (claim) { %>
        <form class="add-claim-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="ssn">SSN</label>
                    <input type="number" maxlength="9" class="form-control" name="ssn" id="ssn" value="<%= claim.ssn %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="first-name">First Name</label>
                    <input type="text" class="form-control" name="first_name" id="first-name" value="<%= claim.first_name %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="middle-init">Middle Initial</label>
                    <input type="text" maxlength="1" class="form-control" name="middle_init" id="middle-init" value="<%= claim.middle_init %>">
                </div>
                <div class="form-group col-md-4">
                    <label for="last-name">Last Name</label>
                    <input type="text" class="form-control" name="last_name" id="last-name" value="<%= claim.last_name %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="gender">Gender</label><br>
                    Male<input type="radio" class="form-control" name="gender" id="gender" value="M"><br>
                    Female<input type="radio" class="form-control" name="gender" id="gender" value="F">
                </div>
                <div class="form-group col-md-4">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" name="username" id="username" value="<%= claim.user_name %>" required disabled title="Username cannot be edited.">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="number">Phone #</label>
                    <input type="number" class="form-control" maxlength="11" name="number" id="number" placeholder="Number" value="<%= claim.number %>" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Claim</button>
        </form>
    <% } else { %>
        <p class="text-center">Claim Not Found. Go <a href="/add">here</a> to add a claim.</p>
    <% } %>
</div>
</div>
</body>
</html>