<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (claims.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">SSN</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Middle Initial</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Phone #</th>
                        <th scope="col">Username</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% claims.forEach((claim, index) => { %>
                        <tr>
                            <th scope="row"><%= claim.id %></th>
                            <td><%= claim.ssn %></td>
                            <td><%= claim.first_name %></td>
                            <td><%= claim.middle_init %></td>
                            <td><%= claim.last_name %></td>
                            <td><%= claim.gender %></td>
                            <td><%= claim.number %></td>
                            <td>@<%= claim.user_name %></td>
                            <td>
                                <a href="/edit/<%= claim.id %>" target="_self" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= claim.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No claims found. Go <a href="/add" >here</a> to add a claim.</p>
        <% } %>
    </div>
</div>
</body>
</html>